<!-- New posting input-->
<br>
<h1 style="margin-left: 40px; font-family:verdana;">New Post</h1>

<form action="/entries" method = "post">
  <p style="margin-left: 40px; font-family:verdana;">
    <label for="title">Subject</label>
    <input type="text" name = "title" id="title">
  </p>
  <p style="margin-left: 40px; font-family:verdana;">
    <label for="occurred_on">Date</label>
    <input type="date" name = "occurred_on" id="occurred_on">
  </p>
  <p style="margin-left: 40px; font-family:verdana;">
    <label for="description">Body</label>
    <input type="text" name = "description" id="description">
  </p>
  <p style="margin-left: 40px; font-family:verdana;">
    <label for="place_id"></label>
    <input type="hidden" name = "place_id" id="place_id" value="<%= params["place_id"]%>" >
  </p>

  <button style="margin-left: 40px; font-family:verdana;">Submit</button>
  <button style="margin-left: 10px; font-family:verdana;"><a href="/places/<%=params["place_id"]%>" > Cancel</a></button>
</form>